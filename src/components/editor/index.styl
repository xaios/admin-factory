.editor
  position relative
  width 100%
  height 350px

.editor_content
  position absolute
  top 0
  left 0
  width 100%
  height 100%
  border 1px solid #dcdee2
  border-radius 3px
  box-sizing border-box

.is_full .editor_content
  position fixed
  border-radius 0
  background #fff
  z-index 9999

.toolbar
  padding 5px
  margin-bottom 14px
  border-bottom 1px solid #eeefef

.is_full .toolbar
  margin 10px 10px 14px
  padding-bottom 15px

.content
  margin 0 14px 14px
  line-height 1.5

.editor .content:deep(>div:focus-visible)
  outline 0

.content:deep(p)
  margin 0

.content:deep(p).is-empty:first-child::before
  content attr(data-placeholder)
  height 0
  float left
  color #aaa
  pointer-events none

.content:deep(img)
  max-width 100%

.content:deep(p) br+br
  display none
