.item
  position relative
  width 68px
  height 68px
  border-radius 4px
  border 1px solid #dcdee2
  transition all .2s ease-in-out
  user-select none
  overflow hidden

  &:hover
    color #2b73af
    border 1px solid #2b73af

.n-form-item-blank--error
  .item
    border 1px solid #ed4014

  .add
    color #ed4014

.mask
  position absolute
  top 0
  left 0
  width 100%
  height 100%

.del
  position absolute
  right 0
  bottom 0
  width 18px
  height 18px
  border-top-left-radius 4px
  background rgba(0, 0, 0, .6)
  cursor pointer
